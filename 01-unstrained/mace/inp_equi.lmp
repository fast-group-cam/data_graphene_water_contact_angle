# LAMMPS script for running NVT simulation

units       metal
dimension   3
boundary    p p p
atom_style  full
atom_modify map yes

newton      on

read_data   ../start.lammps-data

pair_style  symmetrix/mace
pair_coeff  * * ../../../../00-common/models/ch2o-dens-inv_swa-1-6-8.json C H O

variable t equal step

group graphene type 1
group H2O type 2 3

thermo 1000

######### NVT equilibration for 50 ps #############

dump DUMP1 all atom 100 nvt_equi.lammpstrj
timestep 0.001
fix NVT1 graphene nvt temp 300 300 0.1
fix NVT2 H2O nvt temp 300 300 0.1
run 50000

write_restart nvt_equi.restart.*
write_data nvt_equi_final.lammps-data

